<div class="section section--contact">
    <div class="container container--contact">
        <form id="contact" action="" method="post">
            <h3 class="h3">Let's Chat</h3>
            <div class="container--form">
                <div class="identity">
                    <input class="name p" placeholder="Name" type="text" tabindex="1" required autofocus>
                    <input class="email p" placeholder="Email" type="email" tabindex="2" required>
                </div>
                <textarea class="textarea p" placeholder="Type your Message Here...." tabindex="3" required></textarea>
                <button class="submit button_primary" name="submit" type="submit" id="contact-submit" data-submit="...Sending">Submit</button>
            </div>
        </form>    
    </div>
</div>